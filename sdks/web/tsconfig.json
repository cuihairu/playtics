{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
