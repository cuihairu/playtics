{
  "uid": "pit-jvm",
  "title": "Pit JVM",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "JVM Heap Used",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {"expr": "sum(jvm_memory_used_bytes{area=\"heap\"})", "legendFormat": "heap_used (micrometer)"},
        {"expr": "sum(process_runtime_jvm_memory_used{type=\"heap\"})", "legendFormat": "heap_used (otel)"}
      ]
    },
    {
      "type": "timeseries",
      "title": "GC Pause (s/s)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {"expr": "sum(rate(jvm_gc_pause_seconds_sum[5m]))", "legendFormat": "gc_pause (micrometer)"},
        {"expr": "sum(rate(process_runtime_jvm_gc_duration_sum[5m]))", "legendFormat": "gc_pause (otel)"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Threads Live",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {"expr": "sum(jvm_threads_live_threads)", "legendFormat": "threads (micrometer)"},
        {"expr": "sum(process_runtime_jvm_threads_count)", "legendFormat": "threads (otel)"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Process CPU Utilization",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {"expr": "avg(process_cpu_usage)", "legendFormat": "cpu (micrometer)"},
        {"expr": "avg(process_runtime_jvm_cpu_utilization)", "legendFormat": "cpu (otel)"}
      ]
    }
  ]
}
